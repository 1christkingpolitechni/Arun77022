import java.util.*;

public class GPay {

    // Simple user wallet
    static class Wallet {
        String upiId;
        String pin;
        double balance;

        Wallet(String upiId, String pin, double balance) {
            this.upiId = upiId;
            this.pin = pin;
            this.balance = balance;
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Create a sample wallet
        Wallet user = new Wallet("user@upi", "1234", 5000.0);

        System.out.println("===== GPay Simulation =====");
        System.out.print("Enter UPI ID: ");
        String upi = sc.nextLine();

        System.out.print("Enter UPI PIN: ");
        String pin = sc.nextLine();

        if (!upi.equals(user.upiId) || !pin.equals(user.pin)) {
            System.out.println("Invalid UPI ID or PIN!");
            return;
        }

        while (true) {
            System.out.println("\n===== MENU =====");
            System.out.println("1. Check Wallet Balance");
            System.out.println("2. Send Money");
            System.out.println("3. Add Money");
            System.out.println("4. Exit");
            System.out.print("Choose option: ");

            int option = sc.nextInt();

            switch (option) {
                case 1:
                    System.out.println("Your Wallet Balance: ₹" + user.balance);
                    break;

                case 2:
                    sc.nextLine(); // clear buffer
                    System.out.print("Enter receiver UPI ID: ");
                    String receiver = sc.nextLine();

                    System.out.print("Enter amount to send: ₹");
                    double amount = sc.nextDouble();

                    if (amount > user.balance) {
                        System.out.println("❌ Transaction Failed: Insufficient balance!");
                    } else {
                        user.balance -= amount;
                        System.out.println("✔ Money Sent to " + receiver + " Successfully!");
                        System.out.println("Remaining Balance: ₹" + user.balance);
                    }
                    break;

                case 3:
                    System.out.print("Enter amount to add: ₹");
                    double add = sc.nextDouble();
                    user.balance += add;
                    System.out.println("✔ Money Added Successfully!");
                    System.out.println("New Balance: ₹" + user.balance);
                    break;

                case 4:
                    System.out.println("Thank you for using GPay Simulation!");
                    return;

                default:
                    System.out.println("Invalid option!");
            }
        }
    }
}
